{% extends 'base.html.twig' %}

{% block title %} {{ post.title }}{% endblock %}

{% block body %}
    <p>{{ id }}</p>
    <p>{{ post.title|upper }}</p>
    <p>{{ post.text }}</p>
    <p>{{ post.date|date }}</p>
    <p>{{ 560|price }}</p>
    Here is the current locale {{ locale }}

    <p>{{ message }}</p>
    <p>Env: {{ app.environment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Request {{ app.request }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
    <p>Debug {{ app.debug }}</p>
{% endblock %}